<p class="text-success"><%= notice %></p>

<div class="card mb-4 shadow-sm">
  <div class="card-body">
    <%= render @purchase_order_item %>
  </div>
</div>

<div class="d-flex justify-content-between">
  <%= link_to "Edit this purchase order item", edit_purchase_order_item_path(@purchase_order_item), class: "btn btn-warning btn-sm" %>
