<h1 class="display-4 mb-4">Purchase Order Details</h1>

<div class="mb-4">
  <p><strong>Supplier:</strong> <%= @purchase_order.supplier.name %></p>
  <p><strong>Status:</strong> <%= @purchase_order.status %></p>
  <p><strong>Order Date:</strong> <%= @purchase_order.order_date.strftime("%B %d, %Y") %></p>
</div>

<h3 class="mb-3">Order Items</h3>
<table class="table table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @purchase_order.purchase_order_items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td><%= item.quantity %></td>
        <td><%= number_to_currency(item.price) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
