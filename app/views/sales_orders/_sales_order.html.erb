<h1>Sales Order</h1>
<p>
  <strong>Customer:</strong> <%= @sales_order.customer.name %><br>
  <strong>Status:</strong> <%= @sales_order.status %><br>
  <strong>Order Date:</strong> <%= @sales_order.order_date %><br>
  <strong>Total Amount:</strong> <%= number_to_currency(@sales_order.total_amount) %>
</p>

<h3>Order Items</h3>
<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    <% @sales_order_items.each do |sales_order_item| %>
      <tr>
        <td><%= sales_order_item.product.name %></td>
        <td><%= sales_order_item.quantity %></td>
        <td><%= number_to_currency(sales_order_item.price) %></td>
        <td><%= number_to_currency(sales_order_item.quantity * sales_order_item.price) %></td>
        <td><%= line_chart @sales_data, height: "300px" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
