<p style="color: green"><%= notice %></p>

<%= render @sales_order %>

<div class="actions mt-3">
  <%= link_to "Edit this Sales Order", edit_sales_order_path(@sales_order), class: "btn btn-warning" %>
  <%= link_to "Back to Sales Orders", sales_orders_path, class: "btn btn-secondary" %>
  
  <%= button_to "Destroy this Sales Order", @sales_order, method: :delete, data: { confirm: "Are you sure you want to delete this sales order?" }, class: "btn btn-danger" %>
</div>

<style>
  .actions .btn {
    margin-right: 10px;
  }
  p {
    margin-bottom: 1rem;
  }
</style>
