<p style="color: green"><%= notice %></p>

<div class="card">
  <div class="card-header">
    <h2>Supplier Details</h2>
  </div>
  <div class="card-body">
    <p>
      <strong>Name:</strong> <%= @supplier.name %>
    </p>

    <p>
      <strong>Email:</strong> <%= @supplier.email %>
    </p>
    <p>
      <strong>Phone:</strong> <%= @supplier.phone %>
    </p>
    <p>
      <strong>Address:</strong> <%= @supplier.address %>
    </p>
  </div>
  <div class="card-footer">
    <%= link_to "Edit this supplier", edit_supplier_path(@supplier), class: "btn btn-warning" %>
    <%= link_to "Back to suppliers", suppliers_path, class: "btn btn-secondary" %>
    <%= button_to "Destroy this supplier", @supplier, method: :delete, data: { confirm: "Are you sure you want to delete this supplier?" }, class: "btn btn-danger" %>
  </div>
</div>
