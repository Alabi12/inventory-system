<p style="color: green"><%= notice %></p>

<h1>Suppliers</h1>

<%= link_to "New Supplier", new_supplier_path, class: "btn btn-primary mb-3" %>

<div id="suppliers">
  <% if @suppliers.any? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @suppliers.each do |supplier| %>
          <tr>
            <td><%= supplier.name %></td>
            <td><%= supplier.email %></td>
            <td><%= supplier.phone %></td>
            <td>
              <%= link_to "Show", supplier_path(supplier), class: "btn btn-info btn-sm" %>
              <%= link_to "Edit", edit_supplier_path(supplier), class: "btn btn-warning btn-sm" %>
              <%= link_to "Delete", supplier_path(supplier), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="alert alert-info" role="alert">
      No suppliers available. <%= link_to "Add a new supplier.", new_supplier_path %>
    </div>
  <% end %>
</div>
