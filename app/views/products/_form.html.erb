<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
  <%= form.label :supplier_id, "Supplier" %>
  <%= form.collection_select :supplier_id, Supplier.all, :id, :name, prompt: "Select a supplier" %>
</div>

  <div>
    <%= form.label :product_code, style: "display: block" %>
    <%= form.text_field :product_code %>
  </div>
  <div>
    <%= form.label :category, style: "display: block" %>
    <%= form.text_field :category %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price %>
  </div>
  <div>
    <%= form.label :quantity, style: "display: block" %>
    <%= form.text_field :quantity %>
  </div>

  <div>
    <%= form.label :stock_level, style: "display: block" %>
    <%= form.number_field :stock_level %>
  </div>

  <div>
    <%= form.label :low_stock_threshold, style: "display: block" %>
    <%= form.number_field :low_stock_threshold %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
