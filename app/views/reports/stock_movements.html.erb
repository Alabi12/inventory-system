<h1>Stock Movements Report</h1>

<% if @stock_movements.any? %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Product</th>
        <th>Movement Type</th>
        <th>Quantity</th>
        <th>Remaining Stock</th>
      </tr>
    </thead>
    <tbody>
      <% @stock_movements.each do |movement| %>
        <tr>
          <td><%= movement.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
          <td><%= movement.product.name %></td>
          <td><%= movement.movement_type %></td>
          <td><%= movement.quantity %></td>
          <td><%= movement.remaining_stock %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No stock movements recorded.</p>
<% end %>
