<h2>Products Needing Reorder</h2>

<% if @products_needing_reorder.present? %>
  <% @products_needing_reorder.each do |product| %>
    <div class="alert alert-warning">
      <h4><%= product.name %></h4>
      <p>Current Inventory: <%= product.inventory_item.quantity %></p>
      <p>Reorder Point: <%= product.reorder_point %></p>
    </div>
  <% end %>
<% else %>
  <p>No products need reordering at the moment.</p>
<% end %>
