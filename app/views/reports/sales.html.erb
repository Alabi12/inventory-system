<h2 class="section-title" style="font-size: 24px; color: #007bff; margin-bottom: 20px; border-bottom: 2px solid #007bff; padding-bottom: 5px;">
  Sales Reports
</h2>

<!-- Total Sales -->
<p style="font-size: 16px; margin: 10px 0; color: #007bff">
  <strong>Total Sales:</strong> <%= number_to_currency(@total_sales) %>
</p>
<!-- Profit -->
<p style="font-size: 16px; margin: 10px 0; color: #007bff">
  <strong>Total Profit:</strong> <%= number_to_currency(@profit) %>
</p>

<!-- Sales by Product -->
<h3 class="section-title" style="font-size: 20px; color: #333; margin-top: 30px;">
  Sales by Product
</h3>
<% if @sales_by_product.any? %>
  <table style="width: 100%; border-collapse: collapse; margin-bottom: 20px;">
    <thead style="background-color: #007bff; color: #007bff;">
      <tr>
        <th style="padding: 12px; text-align: left; border: 1px solid #ddd;">Product</th>
        <th style="padding: 12px; text-align: left; border: 1px solid #ddd;">Total Sales</th>
      </tr>
    </thead>
    <tbody>
      <% @sales_by_product.each do |record| %>
        <tr style="background-color: <%= cycle('#fff', '#f9f9f9') %>;">
          <td style="padding: 12px; border: 1px solid #ddd;"><%= record.name %></td>
          <td style="padding: 12px; border: 1px solid #ddd;"><%= number_to_currency(record.total_sales) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p style="color: #dc3545; font-weight: bold; text-align: center;">No sales data available for products.</p>
<% end %>

