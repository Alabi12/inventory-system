<h2 class="section-title">Sales Reports</h2>

<!-- Total Sales -->
<p><strong>Total Sales:</strong> <%= number_to_currency(@total_sales) %></p>

<!-- Sales by Product -->
<h3 class="section-title">Sales by Product</h3>
<% if @sales_by_product.any? %>
  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th>Total Sales</th>
      </tr>
    </thead>
    <tbody>
      <% @sales_by_product.each do |record| %>
        <tr>
          <td><%= record.name %></td>
          <td><%= number_to_currency(record.total_sales) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No sales data available for products.</p>
<% end %>

