<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
  <div class="card shadow-lg" style="width: 30rem; padding: 2rem; border-radius: 10px;">
    <%= form_with(model: customer, local: true) do |form| %>
      <% if customer.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h4>
          <ul>
            <% customer.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group mb-3">
        <%= form.label :name, "Customer Name", class: "form-label fw-bold" %>
        <%= form.text_field :name, class: "form-control", placeholder: "Enter customer name" %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :email, "Email", class: "form-label fw-bold" %>
        <%= form.text_field :email, class: "form-control", placeholder: "Enter email address" %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :phone, "Phone Number", class: "form-label fw-bold" %>
        <%= form.text_field :phone, class: "form-control", placeholder: "Enter phone number" %>
      </div>

      <div class="form-group mb-4">
        <%= form.label :address, "Address", class: "form-label fw-bold" %>
        <%= form.text_field :address, class: "form-control", placeholder: "Enter customer address" %>
      </div>

      <div class="text-center">
        <%= form.submit "Save", class: "btn btn-primary w-100" %>
      </div>
    <% end %>
  </div>
</div>
