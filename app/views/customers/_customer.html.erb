<div id="<%= dom_id customer %>">
  <p>
    <strong>Name:</strong>
    <%= customer.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= customer.email %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= customer.phone %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= customer.address %>
  </p>

</div>

<h1>Purchase History for <%= @customer.name %></h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Product</th>
      <th>Quantity</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    <% @purchase_history.each do |order| %>
      <tr>
        <td><%= order.order_date %></td>
        <td><%= order.product.name %></td>
        <td><%= order.quantity %></td>
        <td><%= order.total_price %></td>
      </tr>
    <% end %>
  </tbody>
</table>

