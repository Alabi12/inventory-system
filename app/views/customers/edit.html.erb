<h1 class="page-title">Editing Customer</h1>

<%= render "form", customer: @customer %>

<div class="links">
  <%= link_to "Show", @customer, class: "btn btn-secondary" %> |
  <%= link_to "Back", customers_path, class: "btn btn-primary" %>
</div>

<style>
  /* Page title styling */
  .page-title {
    font-size: 24px;
    font-weight: bold;
    color: #333;
    margin-bottom: 20px;
  }

  /* Link container for "Show" and "Back" buttons */
  .links {
    margin-top: 20px;
    display: flex;
    justify-content: center;  /* Centers the links horizontally */
    gap: 15px;  /* Adds space between the links */
    text-align: center;  /* Ensures text is centered if not using flex */
  }

  .links a {
    font-size: 14px;
    padding: 8px 16px;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s ease;
    color: #fff;
  }

  /* "Show" button style (secondary color) */
  .btn-secondary {
    background-color: #6c757d;
  }

  .btn-secondary:hover {
    background-color: #5a6268;
  }

  /* "Back" button style (primary color) */
  .btn-primary {
    background-color: #007bff;
  }

  .btn-primary:hover {
    background-color: #0056b3;
  }

  /* Responsive design for small screens */
  @media (max-width: 768px) {
    .page-title {
      font-size: 20px;  /* Smaller font size for small screens */
    }

    .links {
      text-align: center;  /* Center links on smaller screens */
    }

    .links a {
      display: inline-block;
      margin: 5px 0;
    }
  }
</style>
