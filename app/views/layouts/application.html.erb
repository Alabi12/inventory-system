  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', 'data-turbo-track': 'reload' %>
  <title>Inventory Management</title>
</head>
<body>
  <!-- Sidebar -->
  <div class="sidebar">
    <ul class="sidebar-menu">
      <li><%= link_to 'Dashboard', dashboard_path %></li>
