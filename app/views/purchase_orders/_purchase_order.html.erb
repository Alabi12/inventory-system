<h1 class="page-title">Purchase Order Details</h1>

<div class="order-details-card">
  <div class="card mb-4">
    <div class="card-body">
      <p><strong>Supplier:</strong> <%= @purchase_order.supplier.name %></p>
      <p><strong>Order Date:</strong> <%= @purchase_order.order_date.strftime('%B %d, %Y') %></p>
      <p><strong>Status:</strong> <span class="status <%= @purchase_order.status.downcase %>"><%= @purchase_order.status %></span></p>
    </div>
  </div>

  <h2 class="section-title">Items</h2>
  <% @purchase_order.purchase_order_items.each do |item| %>
    <div class="card mb-3">
      <div class="card-body d-flex justify-content-between align-items-center">
        <div>
          <h5 class="card-title"><%= item.product.name %></h5>
          <p class="card-text">Quantity: <%= item.quantity %></p>
        </div>
        <div class="price text-end">
          <p class="card-text"><strong><%= number_to_currency(item.price) %></strong></p>
        </div>
      </div>
    </div>
  <% end %>

  <div class="back-button mt-3">
    <%= link_to "Back", purchase_orders_path, class: "btn btn-secondary" %>
  </div>
</div>

<style>
  body {
    font-family: 'Arial', sans-serif;
    background-color: #f4f6f9;
    color: #333;
    margin: 0;
    padding: 0;
  }

  .page-title {
    font-size: 2rem;
    margin-bottom: 20px;
    color: #212529;
    text-align: center;
  }

  .order-details-card {
    max-width: 900px;
    margin: auto;
    padding: 30px;
  }

  .card {
    background-color: #ffffff;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 20px;
    border: none;
  }

  .card h5 {
    margin: 0;
  }

  .status {
    padding: 0.25rem 0.5rem;
    border-radius: 5px;
    font-weight: bold;
  }

  .status.pending {
    background-color: #f0ad4e;
    color: white;
  }

  .status.completed {
    background-color: #5cb85c;
    color: white;
  }

  .status.canceled {
    background-color: #d9534f;
    color: white;
  }

  .section-title {
    font-size: 1.6rem;
    margin: 30px 0 15px;
    color: #495057;
    font-weight: 600;
  }

  .card-text {
    margin-bottom: 5px;
  }

  .price {
    font-size: 1.2rem;
    font-weight: bold;
    color: #343a40;
  }

  .back-button {
    text-align: center;
  }

  .btn-secondary {
    background-color: #6c757d;
    border-color: #6c757d;
    color: white;
  }

  .btn-secondary:hover {
    background-color: #5a6268;
    border-color: #545b62;
  }

  /* Ensure responsiveness */
  @media (max-width: 768px) {
    .order-details-card {
      padding: 20px;
    }

    .card-body {
      padding: 15px;
    }

    .section-title {
      font-size: 1.4rem;
    }

    .price {
      font-size: 1rem;
    }
  }
</style>
