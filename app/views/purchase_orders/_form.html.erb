<%= form_with(model: @purchase_order, local: true) do |form| %>
 <div class="form-group">
    <%= form.label :supplier_id, "Select Supplier" %>
    <%= form.collection_select :supplier_id, Supplier.all, :id, :name, { prompt: "Select a Supplier" } %>
  </div>

  <div class="form-group">
    <%= form.label :order_date, "Order Date" %>
    <%= form.date_field :order_date, value: Date.today %>
  </div>
  <div class="form-group">
    <%= form.label :received_date, "Received Date" %>
    <%= form.date_field :order_date, value: Date.today %>
  </div>
  <div class="form-group">
    <%= form.label :status, "Status" %>
    <%= form.select :status, options_for_select(["pending", "received", "cancelled"], @purchase_order.status) %>
  </div>

  <!-- Nested fields for purchase_order_items -->
  <div class="order-items">
    <h2>Order Items</h2>
    <%= form.fields_for :purchase_order_items do |item_form| %>
      <div class="nested-fields">
        <div class="form-group">
          <%= item_form.label :product_id, "Product" %>
          <%= item_form.collection_select :product_id, Product.all, :id, :name, prompt: "Select Product" %>
        </div>

        <div class="form-group">
          <%= item_form.label :quantity %>
          <%= item_form.number_field :quantity, min: 1 %>
        </div>
        <div class="form-group">
          <%= item_form.label :price %>
          <%= item_form.number_field :price, min: 1 %>
        </div>

        <%= item_form.hidden_field :_destroy %>
        <%= link_to 'Remove Item', '#', class: 'btn btn-danger' %>
      </div>
    <% end %>
  </div>

  <div class="form-group">
    <button class="btn btn-primary">Add Item</button>
    <%= form.submit "Save Order", class: "btn btn-primary" %>
  </div>
<% end %>
