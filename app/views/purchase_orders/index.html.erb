<p style="color: green"><%= notice %></p>

<h1>Purchases Orders</h1>

<div id="purchase_orders">
  <table class="table">
    <thead>
      <tr>
        <th>Order ID</th>
        <th>Supplier</th>
        <th>Status</th>
        <th>Order Date</th>
        <th>Total Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @purchase_orders.each do |purchase_order| %>
        <tr>
          <td><%= purchase_order.id %></td>
          <td><%= purchase_order.supplier.name %></td>
          <td><%= purchase_order.status %></td>
          <td><%= purchase_order.order_date %></td>
          <td><%= purchase_order.total_price %></td>
          <td>
            <%= link_to 'Show', purchase_order_path(purchase_order), class: 'btn btn-info btn-sm' %> |
            <%= link_to 'Edit', edit_purchase_order_path(purchase_order), class: 'btn btn-warning btn-sm' %> |
            <%= link_to 'Delete', purchase_order, method: :delete, data: { confirm: 'Are you sure you want to delete this purchase order?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'New purchase Order', new_purchase_order_path, class: 'btn btn-primary' %>
