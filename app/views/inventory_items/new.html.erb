<h1>Enter Opening Inventory</h1>

<%= form_with model: @inventory_item, local: true do |form| %>
  <div class="form-group">
    <%= form.label :product_id, "Product" %>
    <%= form.collection_select :product_id, Product.all, :id, :name, prompt: "Select a Product" %>
  </div>

  <div class="form-group">
    <%= form.label :opening_inventory, "Opening Inventory" %>
    <%= form.number_field :opening_inventory, class: "form-control", required: true %>
  </div>

  <%= form.submit "Save", class: "btn btn-primary" %>
<% end %>
