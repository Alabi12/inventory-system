<!-- app/views/inventory_items/show.html.erb -->

<div class="inventory-item-details">
  <h1><%= @inventory_item.name %></h1>
  
  <dl>
    <dt>Quantity:</dt>
    <dd><%= @inventory_item.quantity %></dd>
    
    <dt>Product:</dt>
    <dd><%= @inventory_item.product.name %></dd>
    
    <dt>Supplier:</dt>
    <dd><%= @inventory_item.supplier.name %></dd>
  </dl>
</div>

<div class="actions">
  <%= link_to 'Back to Inventory Items', inventory_items_path, class: "btn btn-secondary" %>
</div>
<div class="actions">
  <%= button_to 'Delete', inventory_item_path(@inventory_item), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-secondary" %>
</div>


