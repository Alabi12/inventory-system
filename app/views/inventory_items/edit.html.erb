<!-- app/views/inventory_items/edit.html.erb -->

<h1>Edit Inventory Item</h1>

<%= form_with(model: @inventory_item, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name, "Item Name" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :quantity, "Quantity" %>
    <%= form.number_field :quantity, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :product_id, "Product" %>
    <%= form.collection_select :product_id, Product.all, :id, :name, prompt: "Select a Product", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :supplier_id, "Supplier" %>
    <%= form.collection_select :supplier_id, Supplier.all, :id, :name, prompt: "Select a Supplier", class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Save Changes", class: "btn btn-primary" %>
    <%= link_to "Cancel", inventory_items_path, class: "btn btn-secondary" %>
  </div>
<% end %>
