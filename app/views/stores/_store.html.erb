<!-- app/views/stores/index.html.erb -->
<h1>Stores</h1>
<%= link_to 'New Store', new_store_path, class: 'btn btn-primary' %>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.location %></td>
        <td>
          <%= link_to 'Edit', edit_store_path(store), class: 'btn btn-secondary' %>
          <%= link_to 'Delete', store_path(store), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
